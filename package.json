{
    "name": "eslint-plugin-uship-omniscient",
    "version": "0.14.0",
    "description": "An eslint rule to lint for, and fix, usages of omniscient.",
    "keywords": [
        "eslint",
        "eslintplugin",
        "eslint-plugin"
    ],
    "author": "Richard Simpson <rsimpson@uship.com>",
    "main": "dist/index.js",
    "scripts": {
        "lint:types": "tsc --noEmit",
        "lint:rules": "eslint lib/**/*.{ts,tsx}",
        "format": "prettier --write {lib,docs}/**/*.{ts,tsx,md}",
        "build": "run-s clean lint:** build:**",
        "clean": "rimraf ./dist/",
        "build:typescript": "tsc",
        "test": "jest",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
        "test:watch": "jest --watch",
        "prepublishOnly ": "run-s build"
    },
    "devDependencies": {
        "@types/eslint": "^4.16.5",
        "@types/jest": "^23.3.13",
        "@types/jest-diff": "^20.0.0",
        "@types/node": "^10.12.12",
        "@types/prettier": "^1.15.2",
        "@typescript-eslint/eslint-plugin": "^1.1.0",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.12.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.11.1",
        "husky": "^1.3.1",
        "jest": "23.x",
        "jest-diff": "^24.0.0",
        "lint-staged": "^8.1.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.6.2",
        "ts-jest": "^23.10.5",
        "ts-node": "^7.0.1",
        "typescript": "^3.2.1"
    },
    "engines": {
        "node": ">=8.x"
    },
    "license": "ISC",
    "peerDependencies": {
        "eslint": "~5.9.0"
    },
    "dependencies": {
        "prettier": "^1.15.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "{docs,lib}/**/*.{json,md}": [
            "npm run format",
            "git add"
        ],
        "lib/**/*.{js,ts}": [
            "yarn format",
            "npm run lint:rules",
            "git add"
        ]
    }
}
